<!doctype html>
<html lang="pt-br" ng-app="app">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>xDuka | <%= title %></title>
    <link rel="icon" type="image/png" href="assets/xduka/img/mini.png">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic">

    <!-- BUNDLE:CSS CONCATENADO E MINIFICADO -->
    <link rel="stylesheet" href="dist/assets/css/bundle_common.css">
    <link rel="stylesheet" href="dist/assets/css/bundle_secretaria.css">

    <!--UI-SELECT-->
    <!--
    IE8 support, see AngularJS Internet Explorer Compatibility http://docs.angularjs.org/guide/ie
    For Firefox 3.6, you will also need to include jQuery and ECMAScript 5 shim -->
    <!--[if lt IE 9]>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/es5-shim/2.2.0/es5-shim.js"></script>
    <script>
        document.createElement('ui-select');
        document.createElement('ui-select-match');
        document.createElement('ui-select-choices');
    </script>
    <![endif]-->

    <!--SCRIPT-->
    <!--<script src="lib/requirejs/require.js" data-main="js/<%= area %>/main"></script>-->

</head>
<body ng-controller="Main as main"
      class="page-body page-fade" data-url="http://neon.dev">

<div class="page-container">

    <div class="sidebar-menu">
        <header class="logo-env">
            <!-- logo -->
            <div class="logo">
                <a href="/">
                    <img src="/dist/assets/xduka/img/logo.png" width="120" alt=""/>
                </a>
            </div>
            <!-- logo collapse icon -->
            <div class="sidebar-collapse">
                <a href="#" class="sidebar-collapse-icon with-animation">
                    <!-- add class "with-animation" if you want sidebar to have animation during expanding/collapsing transition -->
                    <i class="entypo-menu"></i>
                </a>
            </div>
            <div style="padding-left: 1%" class="sidebar-collapse hidden-md hidden-lg hidden-sm" title="Sair">
                <a href="/logout">
                    <!-- add class "with-animation" if you want sidebar to have animation during expanding/collapsing transition -->
                    <i class="entypo-logout"></i>
                </a>
            </div>
            <!-- open/close menu icon (do not remove if you want to enable menu on mobile devices) -->
            <div class="sidebar-mobile-menu visible-xs">
                <a href="#" class="with-animation"><!-- add class "with-animation" to support animation -->
                    <i class="entypo-menu"></i>
                </a>
            </div>
        </header>
        <ul id="main-menu" class="">
            <!-- add class "multiple-expanded" to allow multiple submenus to open -->
            <!-- class "auto-inherit-active-class" will automatically add "active" class for parent elements who are marked already with class "active" -->
            <li ng-repeat="item in main.menu.list">
                <a ng-href="{{item.href}}" ng-click="main.menuAction()">
                    <i ng-class="item.iconClass"></i>
                    <span ng-bind="item.text"></span>
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">

        <div class="row">
            <!-- Profile Info and Notifications -->
            <div class="col-md-6 col-sm-8 clearfix">
                <ul class="user-info pull-left pull-none-xsm">
                    <!-- Profile Info -->
                    <li class="profile-info dropdown">
                        <!-- add class "pull-right" if you want to place this from right -->
                        <span href="#" class="dropdown-toggle">
                            <img ng-src="{{main.user.avatar.thumb}}" alt="{{main.user.name}}"
                                 class="img-circle" width="44"/>
                            {{main.user.name}}
                        </span>
                    </li>
                </ul>
<!--
                <div class="row">
                    <div class="col-md-6">
                        <form role="form" class="form-horizontal form-groups-bordered">
                            <xd-select data-params="main.cursos" data-change="main.sendCurso" ></xd-select>
                        </form>
                        <br/>
                    </div>
                </div>-->
            </div>

            <!-- Raw Links -->
            <div class="col-md-6 col-sm-4 clearfix hidden-xs">
                <ul class="list-inline links-list pull-right">
                    <li>
                        <a href="/logout">
                            {{main.STR.LOGOUT}}
                            <i class="entypo-logout right"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <hr/>

        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb bc-3">
                    <li>
                        <a href="/"><i class="entypo-home"></i>Home</a>
                    </li>
                    <li class="active">
                        <strong>{{main.breadCrumb.title}}</strong>
                    </li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div data-ng-view
                 class="col-sm-12 col-md-12 col-lg-12" ng-cloak>
            </div>
        </div>


        <footer class="main">
            &copy; 2014
            <strong>xDuka</strong>
            Desenvolvido pela
            <a href="http://xdevel.com.br"
               target="_blank">xDevel</a>
        </footer>

    </div>
</div>

<!-- BUNDLE:JS CONCATENADO E MINIFICADO -->
<script type="text/javascript" src="/dist/assets/js/bundle_common.js"></script>
<script type="text/javascript" src="/dist/assets/js/bundle_secretaria.js"></script>

</body>
</html>
