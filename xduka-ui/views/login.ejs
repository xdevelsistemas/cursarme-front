    <link rel="stylesheet" href="/assets/css/font-icons/entypo/css/entypo.css">
    <link rel="stylesheet" href="/assets/css/neon.css">
    <link rel="stylesheet" href="/assets/css/custom.css">

    <!--XDUKA-->
    <link rel="stylesheet" href="/assets/xduka/css/skin.css">
    <!-- endbuild -->
</head>
<body>
<div id="login-view" class="page-body login-page login-form-fall">
    <div class="login-container">

        <div class="login-header login-caret" style="min-height: 100%;height: 50vh">

            <div class="login-content headerLogin" style="height: 100%; padding-bottom: 3%">

                <a href="#" class="logo loginLogo">
                    <div style="background: url('/assets/xduka/img/logo.png') center no-repeat; height: 140px; background-size: contain"></div>
                </a>

                <!--<p class="description">Dear user, log in to access the admin area!</p>-->

                <!-- progress bar indicator -->
                <div class="login-progressbar-indicator">
                    <h3>43%</h3>
                    <span>logging in...</span>
                </div>
            </div>

        </div>

        <div class="login-progressbar">
            <div></div>
        </div>

        <div class="login-form" style="min-height: 50vh;height: 100%">

            <div class="login-content">

                <form action="/login" method="post" role="form" id="form_login" class="validate">

                    <div class="form-group">

                        <!-- show any messages that come back with authentication -->
                        <% if (message != '') { %>
                        <div id="msgAlert" class="alert alert-danger text-center" style="width: 320px">
                            <p class="text-danger"><i class="entypo-info"></i><%= message %></p>
                        </div>
                        <% }%>

                        <div id="msgErro" class="alert alert-danger" style="display: none"></div>

                        <div id="msgSuccess" class="alert alert-success" style="display: none"></div>

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="entypo-user"></i>
                            </div>

                            <input type="text" class="form-control"
                                   name="email" id="username"
                                   placeholder="Usuário"
                                   autocomplete="off"
                                   data-validate="required"
                                   data-message-required="Este é um campo obrigatório."
                                   data-message-minlength="Digite pelo menos 8 caracteres."/>
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="entypo-key"></i>
                            </div>
                            <input type="password" class="form-control"
                                   name="password" id="password"
                                   placeholder="Senha"
                                   autocomplete="off"
                                   data-validate="required"
                                   data-message-required="Este é um campo obrigatório."
                                   data-message-minlength="Digite pelo menos 8 caracteres."/>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit"
                                class="btn btn-primary btn-block btn-login" style="white-space: normal">
                            Entrar
                            <i class="entypo-login"></i>
                        </button>
                    </div>

                </form>

                <!--<div id="recallSucess" class="col-md-12" style="display: none">
                    <p class="text-sucess">Sucesso! Em breve você receberá um email com os passos necessários para recuperar sua senha.</p>
                </div>

                <div id="recallEmail404" class="col-md-12" style="display: none">
                    <p style="color: rgb(253, 73, 82)">O endereço de email informado não está cadastrado! Por favor insira o email cadastrado para recuperar sua conta.</p>
                </div>-->

                <div class="login-bottom-links">
                    <a href="#" class="link" data-bind="event:{click: function(){$root.esqueceuSenha();} }" data-toggle="modal" data-target="#esqueceuSenha">Esqueceu
                        sua senha?</a>
                    <!-- todo david - retirar o token validator -->
                    <!--<br/>-->
                    <!--<button type="button" class="btn btn-info btn-lg btn-icon icon-left pull-right" onclick="$.passRecall.testandoToken('Aa64fASF5535aasf5457ca')"><i class="entypo-check"></i>Testar token</button>-->
                    <!--<br/>-->
                    © 2014 xDuka Desenvolvido por <a href="#"><u>xDevel</u></a>
                </div>

            </div>

        </div>

    </div>
</div>
<div aria-hidden="true" style="display: none;" class="modal fade" id="esqueceuSenha">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Enviar por email</h4>
            </div>
            <form>
            <div class="modal-body">

                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="esqueciSenhaEmail">Por favor digite abaixo o email cadastrado na conta para recuperá-la!</label>
                        <div class="input-group">
                            <div class="input-group-addon">@</div>
                            <input id="esqueciSenhaEmail" type="email" placeholder="exemplo@exemplo.com" required class="form-control"/>
                        </div>
                        <p id="recallError" style="display: none" class="error text-danger">Ops! Parece que este email não é válido.</p>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-sm-6 text-center">
                        <button type="button" class="btn btn-default btn-lg btn-icon icon-left pull-left" data-dismiss="modal"><i class="entypo-back"></i>Voltar</button>
                    </div>
                    <div class="col-sm-6 text-center">
                        <button type="button" class="btn btn-info btn-lg btn-icon icon-left pull-right" onclick="$.passRecall.enviar($('#esqueciSenhaEmail').val()) "><i class="entypo-check"></i>Enviar</button>
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>

